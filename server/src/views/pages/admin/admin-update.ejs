<!-- admin-update.ejs -->
<!DOCTYPE html>
<html>
<head>
    <title>Update Admin</title>
</head>
<body>
    <h1>Update Admin</h1>

    <form id="adminForm" action="/admin/update" method="PUT">
        <input type="hidden" name="id" value="<%= admin.id %>">
        <input type="text" name="profile" value="<%= admin.profile %>" placeholder="Profile">
        <input type="text" name="name" value="<%= admin.name %>" placeholder="Name">
        <input type="text" name="user" value="<%= admin.user %>" placeholder="Username">
        <input type="password" name="password" placeholder="New Password">
        <select name="status">
            <option value="1" <%= admin.status === 1 ? "selected" : "" %>>Active</option>
            <option value="0" <%= admin.status === 0 ? "selected" : "" %>>Inactive</option>
        </select>
        <button type="submit">Update Admin</button>
    </form>

    <% if (message) { %>
        <p><%= message %></p>
    <% } %>
</body>
</html>
