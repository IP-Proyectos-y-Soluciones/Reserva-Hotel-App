              </td> 

            </tr>  -->
            <% for (const testimonial of testimonials) { %>
              <tr>
                <td><%= testimonial.id_testimony %></td>
                <td><%= testimonial.booking.transaction_number %></td>
                <td><%= testimonial.user.name %></td>
                <td><%= testimonial.bedroom.kind_h %></td>
                <td><%= testimonial.testimony %></td>
                <!-- <td><%= testimonial.approved %></td> -->
                <td>
                  <form action="/testimonials/api/approve/<%= testimonial.id_testimony %>" method="POST">
                    <% if (testimonial.approved) { %>
                      <button class="btn btn-success btn-sm" type="submit">
                        Aprobado
                      </button>
                      <% } else { %>
                      <button class="btn btn-dark btn-sm" type="submit">
                        Aprobar
                      </button>
                      <% } %>
                  </form>
                </td>
                <td><%= testimonial.date %></td>
              </tr>
              <% } %>
          </tbody>
        </table>
      </div>
    </div>
    <!-- /.card -->
  </section>
  <!-- /.content -->
</div>
<%- include('../partials/footer') %>
