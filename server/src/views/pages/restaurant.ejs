              <tr>
                <td><%= restaurant.id %></td>
                <td><img src="<%= restaurant.img %>" alt="<%= restaurant.id %>" class="img-fluid"></td>
                <td><%= restaurant.description %></td>
                <td>
                  <button class="btn btn-warning btn-sm" data-toggle="modal" data-target="#editarRestaurante" data-id="<%= restaurant.id %>"><i class="fas fa-pencil-alt text-white"></i></button>  
                  <button class="btn btn-danger btn-sm" data-toggle="modal" data-target="#delete<%= restaurant.id %>" data-id="<%= restaurant.id %>"><i class="fas fa-trash-alt"></i></button>
