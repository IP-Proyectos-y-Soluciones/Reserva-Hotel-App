<%- include('../partials/footer') %>
</div>

<!--=====================================
Modal Crear Restaurante
======================================-->

<div class="modal" id="crearRestaurante">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post">
        <!-- Modal Header -->
        <div class="modal-header bg-info">
          <h4 class="modal-title">Crear Restaurante</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <div class="form-group">
            <div class="input-group mb-3">
              <div class="input-group-append input-group-text">
                <span class="fas fa-paperclip"></span>
              </div>
  
              <input
                type="text"
                class="form-control"
                name="img"
                placeholder="Ingresa la url de la imagen"
                required
              />
            </div>
          </div>

          <div class="input-group mb-3">
            <textarea
              class="form-control"
              maxlength="40"
              name="description"
              placeholder="Ingresa la descripción del Plato"
              required
            ></textarea>
          </div>
        </div>

        <!-- Modal footer -->
        <div class="modal-footer d-flex justify-content-between">
          <div>
            <button type="button" class="btn btn-danger" data-dismiss="modal">
              Cerrar
            </button>
          </div>

          <div>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<!--=====================================
Modal Editar Restaurante
======================================-->

<% for (const restaurant of getRestaurants) { %>
<div class="modal" id="editarRestaurante">
  <div class="modal-dialog">
    <div class="modal-content">
      <form method="post" action="/restaurant/<%= restaurant.id %>">
        <!-- Modal Header -->
        <div class="modal-header bg-info">
          <h4 class="modal-title">Editar Restaurante</h4>
          <button type="button" class="close" data-dismiss="modal">&times;</button>
        </div>

        <!-- Modal body -->
        <div class="modal-body">
          <input type="hidden" name="_method" value="put" />

          <div class="form-group">
            <div class="input-group mb-3">
              <div class="input-group-append input-group-text">
                <span class="fas fa-paperclip"></span>
              </div>
  
              <input
                type="text"
                class="form-control"
                name="img"
                value="<%= restaurant.img %>"
                required
              />
            </div>
          </div>

          <div class="input-group mb-3">
            <textarea
              class="form-control"
              maxlength="40"
              name="description"
              required
            ><%= restaurant.description %></textarea>
          </div>
        </div>

        <!-- Modal footer -->
        <div class="modal-footer d-flex justify-content-between">
          <div>
            <button type="button" class="btn btn-danger" data-dismiss="modal">
              Cerrar
            </button>
          </div>

          <div>
            <button type="submit" class="btn btn-primary">Guardar</button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

<% } %>

<!--=====================================
Eliminar Recorrido
======================================-->

<% for (const restaurant of getRestaurants) { %>
  <div class="modal" id="delete<%= restaurant.id %>">
      <div class="modal-dialog">
          <div class="modal-content">
            <form method="post" action="/restaurant/delete/<%= restaurant.id %>">
            <!-- Modal header -->
              <div class="modal-header bg-danger text-white">
                  <h4 class="modal-title">Eliminar Restaurante</h4>
                  <button type="button" class="close" data-dismiss="modal">&times;</button>
              </div>
              <!-- Modal body -->
              <div class="modal-body">
                <input type="hidden" name="_method" value="delete">
                  <p>¿Está seguro de que desea eliminar el restaurante <%= restaurant.id %>?</p>
              </div>
              <!-- Modal footer -->
              <div class="modal-footer">
                  <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancelar</button>
                  <button type="submit" class="btn btn-danger">Eliminar</button>
              </div>
            </form>
          </div>
      </div>
  </div>
  <% } %>
