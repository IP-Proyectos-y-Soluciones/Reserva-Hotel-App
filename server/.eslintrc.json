{
  "env": {
    "node": true,
    "es6": true,
    "browser": true,
    "module": true
  },
  "globals": {
    "suite": "readonly",
    "test": "readonly"
  },
  "extends": "eslint:recommended",
  "settings": {
    "import/resolver": {
      "node": {
        "moduleDirectory": ["src", "node_modules"]
      }
    }
  },
  "parserOptions": {
    "ecmaVersion": 6
  },
  "rules": {
    "linebreak-style": [
        "error",
        "unix"
    ],
    "no-trailing-spaces": 2,
    "indent": [
      "error",
      2
    ],
    "quotes": [
        "error",
        "single",
        {
          "avoidEscape": true,
          "allowTemplateLiterals": true
        }
    ],
    "semi": [
        "error",
        "always"
    ],
    "comma-style": [
        "error",
        "last"
    ],
    "one-var": [
        "error",
        "never"
    ],
    "no-console": 0,
    "no-useless-escape": 0
  }
}
